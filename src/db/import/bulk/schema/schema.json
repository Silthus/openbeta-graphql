{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Area": {
      "type": "object",
      "properties": {
        "area_name": {
          "type": "string"
        },
        "shortCode": {
          "type": "string"
        },
        "climbs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Climb"
          }
        },
        "children": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string",
                "format": "uuid"
              },
              {
                "$ref": "#/definitions/Area"
              }
            ]
          }
        },
        "ancestors": {
          "type": "string"
        },
        "pathTokens": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "gradeContext": {
          "type": "string",
          "enum": [
            "ALSK",
            "AU",
            "BRZ",
            "FIN",
            "FR",
            "HK",
            "NWG",
            "POL",
            "SA",
            "SWE",
            "SX",
            "UIAA",
            "UK",
            "US"
          ],
          "_comment": "gradeContext sets grading system for climbing/bouldering (respectively). US = YDS/Vscale, FR = French/Fontainebleau, UIAA = UIAA/Fontainebleau"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "isDestination": {
              "type": "boolean"
            },
            "leaf": {
              "type": "boolean"
            },
            "isBoulder": {
              "type": "boolean"
            },
            "lnglat": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["Point"]
                },
                "coordinates": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  },
                  "minItems": 2,
                  "maxItems": 2
                }
              }
            },
            "bbox": {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 4,
              "maxItems": 4
            },
            "leftRightIndex": {
              "type": "number"
            },
            "ext_id": {
              "type": "string"
            },
            "area_id": {
              "type": "string"
            }
          },
          "required": ["area_id"]
        },
        "content": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            }
          }
        },
        "density": {
          "type": "number"
        },
        "totalClimbs": {
          "type": "number"
        },
        "_change": {
          "type": "object"
        },
        "_deleting": {
          "type": "string",
          "format": "date-time"
        },
        "updatedBy": {
          "type": "object"
        },
        "createdBy": {
          "type": "object"
        }
      },
      "required": ["area_name"]
    },
    "Climb": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "object",
          "properties": {
            "type": "Buffer"
          }
        },
        "name": {
          "type": "string"
        },
        "yds": {
          "type": "string"
        },
        "grades": {
          "type": "object",
          "properties": {
            "vscale": { "type": "string" },
            "yds": { "type": "string" },
            "ewbank": { "type": "string" },
            "brazilian_crux": { "type": "string" },
            "french": { "type": "string" },
            "font": { "type": "string" },
            "UIAA": { "type": "string" }
          }
        },
        "gradeContext": {
          "type": "string",
          "enum": [
            "ALSK",
            "AU",
            "BRZ",
            "FIN",
            "FR",
            "HK",
            "NWG",
            "POL",
            "SA",
            "SWE",
            "SX",
            "UIAA",
            "UK",
            "US"
          ]
        },
        "fa": {
          "type": "string"
        },
        "type": {
          "type": "object"
        },
        "safety": {
          "type": "string",
          "enum": ["UNSPECIFIED", "PG", "PG13", "R", "X"]
        },
        "boltsCount": {
          "type": "number"
        },
        "pitches": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "object",
                "properties": {
                  "type": "Buffer"
                }
              },
              "parentId": {
                "type": "object"
              },
              "pitchNumber": {
                "type": "number"
              },
              "grades": {
                "type": "object"
              },
              "type": {
                "type": "object"
              },
              "length": {
                "type": "number"
              },
              "boltsCount": {
                "type": "number"
              },
              "description": {
                "type": "string"
              }
            }
          }
        },
        "metadata": {
          "type": "object",
          "properties": {
            "lnglat": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["Point"]
                },
                "coordinates": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  },
                  "minItems": 2,
                  "maxItems": 2
                }
              }
            },
            "left_right_index": {
              "type": "number"
            },
            "mp_id": {
              "type": "string"
            },
            "mp_crag_id": {
              "type": "string"
            },
            "areaRef": {
              "type": "object"
            }
          }
        },
        "content": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "protection": {
              "type": "string"
            },
            "location": {
              "type": "string"
            }
          }
        },
        "_deleting": {
          "type": "string",
          "format": "date-time"
        },
        "updatedBy": {
          "type": "object"
        },
        "createdBy": {
          "type": "object"
        },
        "_change": {
          "type": "object"
        }
      },
      "required": ["name", "yds", "grades", "safety"]
    }
  }
}

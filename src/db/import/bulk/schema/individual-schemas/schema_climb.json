{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Climb",
  "type": "object",
  "properties": {
    "_id": {
      "type": "object",
      "properties": {
        "type": "Buffer"
      }
    },
    "name": {
      "type": "string"
    },
    "yds": {
      "type": "string"
    },
    "grades": {
      "type": "object",
      "properties": {
        "vscale": {"type": "string"},
        "yds": {"type": "string"},
        "ewbank": {"type": "string"},
        "brazilian_crux": {"type": "string"},
        "french": {"type": "string"},
        "font": {"type": "string"},
        "UIAA": {"type": "string"}
      }
    },
    "gradeContext": {
      "type": "string",
      "enum": ["ALSK", "AU", "BRZ", "FIN", "FR", "HK", "NWG", "POL", "SA", "SWE", "SX", "UIAA", "UK", "US"] // US = YDS/Vscale, FR = French/Fontainebleau, UIAA = UIAA/Fontainebleau (Climbing/Bouldering)
    },
    "fa": {
      "type": "string"
    },
    "type": {
      "type": "object"
    },
    "safety": {
      "type": "string",
      "enum": ["UNSPECIFIED", "PG", "PG13", "R", "X"]
    },
    "boltsCount": {
      "type": "number"
    },
    "pitches": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "object",
            "properties": {
              "type": "Buffer"
            }
          },
          "parentId": {
            "type": "object"
          },
          "pitchNumber": {
            "type": "number"
          },
          "grades": {
            "type": "object"
          },
          "type": {
            "type": "object"
          },
          "length": {
            "type": "number"
          },
          "boltsCount": {
            "type": "number"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "lnglat": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["Point"]
            },
            "coordinates": {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 2,
              "maxItems": 2
            }
          }
        },
        "left_right_index": {
          "type": "number"
        },
        "mp_id": {
          "type": "string"
        },
        "mp_crag_id": {
          "type": "string"
        },
        "areaRef": {
          "type": "object"
        }
      }
    },
    "content": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "protection": {
          "type": "string"
        },
        "location": {
          "type": "string"
        }
      }
    },
    "_deleting": {
      "type": "string",
      "format": "date-time"
    },
    "updatedBy": {
      "type": "object"
    },
    "createdBy": {
      "type": "object"
    },
    "_change": {
      "type": "object"
    }
  },
  "required": ["name", "yds", "grades", "safety"]
}